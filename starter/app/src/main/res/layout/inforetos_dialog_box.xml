<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/style_bordes_text_pop_up"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/image_pop_Retos"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_directions_run_24" />

    <ImageButton
        android:id="@+id/imageBtnExitInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:minHeight="30dp"
        android:minWidth="30dp"
        android:src="@drawable/ic_baseline_cancel_24"
        android:background="@drawable/style_relleno_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_pop_Retos"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:textAlignment="center"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/image_pop_Retos">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Titulo:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoTituloReto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:text="Titulo"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:hint="Description"
                android:text="Descripcion:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoDescripcionReto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:text="Descripcion"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:hint="Distance"
                android:text="Distancia(m):"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoDistanciaReto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Distance"
                android:text="Distancia"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Time"
                android:text="Tiempo (min):"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoTiempoReto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Time"
                android:text="Tiempo"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Reward"
                android:text="Recompensa:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoRecompensaReto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Reward"
                android:text="Recompensa"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/style_bordes_text"
                android:backgroundTint="#2196F3"
                android:backgroundTintMode="add"
                app:srcCompat="@drawable/ic_baseline_diamond_24" />


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>